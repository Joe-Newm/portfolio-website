---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
---

<Layout title="Welcome to Astro.">
    <main>
        <div id="bio-container">
            <div>
                <img
                    id="selfie"
                    src="/public/img/self-portrait.jpg"
                    alt="portrait of Joseph Newman in black and white"
                />
            </div>
            <div>
                <h1>Hi, my name is Joseph Newman</h1>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed
                    do eiusmod tempor incididunt ut labore et dolore magna
                    aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                    ullamco laboris nisi ut aliquip ex ea commodo consequat.
                </p>
            </div>
        </div>
        <h2 class="mb-5">Selected Projects</h2>
            <Project projectName={"Pokemon-TCG Cards"} tools={["node.js", "express.js", "ejs", "API"]} link={"https://pokemon-tcg-web.fly.dev/"}/>
            <Project projectName={"Space Invaders Clone"} tools={["java", "libGDX"]} link={"https://joe-newm.github.io/space-invaders-web/"}/>
        <style>
            #bio-container {
                display: flex;
                gap: 25px;
                margin-bottom: 75px;
            }
            #selfie {
                height: auto;
                width: 600px;
            }
        </style>
    </main>
</Layout>
