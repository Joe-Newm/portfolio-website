            <div>
                <img
                    id="selfie"
                    class="h-auto"
                    src="/public/img/self-portrait.jpg"
                    alt="portrait of Joseph Newman in black and white"
                />
            </div>
            <div>
                <h1>Hi, I'm Joseph Newman</h1>
                <p class="text-gray-600 ">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed
                    do eiusmod tempor incididunt ut labore et dolore magna
                    aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                    ullamco laboris nisi ut aliquip ex ea commodo consequat.
                </p>
            </div>
        </div>
        <h2 class="mb-5">Selected Projects</h2>
            <Project projectName={"Pokemon-TCG Cards"} tools={["javascript", "node.js", "express.js", "ejs"]} link={"https://pokemon-tcg-web.fly.dev/"}/>
